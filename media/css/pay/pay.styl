@import 'lib';

html, body {
    height: 100%;
    background: $bg-main-cont;
}

body {
    color: $dark-gray;
    font-family: $open-stack;
    font-size: 13px;
    font-weight: 400;
    line-height: 22px;
    margin: 0;
    overflow-x: hidden;
    &.error-page {
        padding: 10px;
    }
}

#content {
    padding: 10px 20px;
}

h2 {
    font-size: 18px;
    font-weight: 400;
    line-height: 26px;
    margin: 0;
    &.error {
      color: #800;
    }
}

a:link,
a:visited,
a:hover,
a:active,
a:focus {
    color: rgb(0, 150, 220);
    font-size: 13px;
    line-height: 18px;
    text-decoration: none;
}

.progress {
    background: $bg-main-cont;
    background: rgba(244, 244, 244, 0.9);
    bottom: 0;
    color: $dark-gray;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 20;
}
.progress .txt {
    display: block;
    margin-top: 20px;
    text-align: center;
}

section.pay {
    margin: 0 auto;
    max-width: 600px;
    min-height: 100%;
    padding-bottom: 50px;
    position: relative;
    width: 100%;
    word-wrap: break-word;
}

.longtext .pay {
    padding-bottom: 150px;
}

pre {
    white-space: pre-wrap;
    word-wrap: break-word;
}

footer {
    background: rgba(0, 0, 0, 0.03);
    border-top: 1px solid $light-gray;
    bottom: 0;
    left: 0;
    opacity: 0;
    padding: 10px 20px;
    position: absolute;
    transition(opacity 1s ease-in);
    width: 100%;
    &.longtext .button {
        margin: 5px 0;
        width: 100%;
    }
    &.visible {
        opacity: 1;
    }
    .button {
        width: 47%;
    }
}

.lock-continue,
.reset-pin,
footer button[type=submit] {
    float: right;
}

#enter-pin {
    display: none;
}

/* PIN Entry Box */
.pinbox {
    padding-top: 5px;
    position: relative;
    width: 100%;
    input {
        background: transparent;
        border: 0;
        display: block;
        font-size: 2.5em;
        opacity: 0;
        position: absolute;
        text-align: center;
        top: 0;
        width: 100%;
        &::-moz-placeholder {
          color: #888;
          font-family: monospace;
          text-shadow: 0 1px #fff;
        }
        &:-moz-placeholder {
          color: #888;
          font-family: monospace;
          text-shadow: 0 1px #fff;
        }
    }
    &.error .display span,
    &.error .display span.current {
        box-shadow: 0px 0px 5px 0 #A50606;
        border: 1px solid #A50606;
    }
    .display {
        line-height: 1em;
        margin: auto;
        span {
            box-shadow: inset 0 2px 2px 0 rgba(177, 177, 177, 0.30);
            background: #fff;
            border-radius: 5px;
            border: 1px solid #ccc;
            display: inline-block;
            height: 40px;
            margin-left: 10px;
            position: relative;
            width: 50px;

            &:first-child {
                margin-left: 0;
            }

            &.filled:after {
                bottom: 0;
                content: '‚óè';
                display: block;
                font-size: 28px;
                left: 0;
                line-height: 35px;
                position: absolute;
                right: 0;
                text-align: center;
                top: 0;
            }

            &.current {
                border: 1px solid #0096DC;
                box-shadow: 0 0px 5px 0 #0096DC;
            }
        }
    }
}

.forgot-pin {
    float: left;
    padding: 5px 0;
    position: relative;
    z-index: 10;
}

.error .forgot-pin {
    float: left;
    margin-left: 5px;
    &:before {
        content: "|";
        padding-right: 5px;
        color: $dark-gray;
    }
}

.error-msg {
    color: #A50606;
    display: none;
    line-height: 18px;
    margin: 5px 0;
}

.error .error-msg {
    display: block;
    float: left;
}

/* Buttons */
a.button,
.button {
    border-radius: 3px;
    border: 1px solid #00AACC;
    color: $dark-gray;
    display: inline-block;
    font: 600 14px/40px $open-stack;
    gradient-two-color(#00CAF2, #00AACC);
    height: 40px;
    overflow: hidden;
    padding: 0 10px;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-overflow: ellipsis;
    text-shadow: 0 1px 0 #fff;
    white-space: nowrap;

    &::-moz-focus-inner {
        border: 0;
        padding: 0 10px;
    }

    &.sec {
        border: 1px solid #9A9A9A;
        gradient-two-color($white, $light-gray);
        &:hover,
        &:active,
        &:focus {
            gradient-two-color($light-gray, $white);
        }
    }

    &:hover,
    &:active {
        gradient-two-color(#00AACC, #00CAF2);
    }

    &:focus {
        border: 1px solid #0096DC;
        box-shadow: 0 0 5px 0 #0096DC;
        outline: none;
    }

    &[disabled], &.disabled {
        background: #e7e7e7;
        border-color: #c7c7c7;
        color: #c7c7c7;
        padding: 0 10px;
        pointer-events: none;
        text-shadow: none;
    }
}

.sign-in,
.sign-in:before {
    background: url(../../img/persona-btn-sprite.png) no-repeat right top;
}

a.sign-in,
.sign-in {
    color: $dark-gray;
    display: block;
    height: 42px;
    line-height: 42px;
    margin-top: 20px;
    max-width: 231px;
    padding-left: 50px;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 1px $white;
    width: 100%;
    &:hover,
    &:active,
    &:focus {
        background-position: right bottom;
    }
}

.full-error {
    background-color: $grain;
    color: #fff;
    grain();
    position: relative;
    width: 100%;
    #content {
        bottom: 0;
        left: 0;
        max-height: 100%; /* Causes scroll bars when content is too large */
        overflow-y: auto;
        padding-bottom: 0;
        position: absolute;
        right: 0;
        width: 100%;
    }
    h2 {
        border-bottom: 1px solid $border-gray;
        padding-bottom: 5px;
    }
    .msg {
        p {
            font-size: 24px;
            line-height: 32px;
            margin: 20px 0 0;
        }
    }
    footer {
        background: none;
        border-top: 0;
        margin: 10px 0 20px;
        padding: 0;
        position: static;
        button,
        .button {
            width: 100%;
            &.half {
                width: 47%;
                padding: 0 10px;
            }
        }
    }
}
